<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NavigationFragment"
    android:background="#EAEAEA"
    android:padding="8dp">

    <ImageView
        android:id="@+id/iv_menu_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_close_24dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/ic_home_24dp"
            android:drawablePadding="8dp"
            android:padding="16dp"
            android:background="@drawable/nav_menu_selector"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

        <TextView
            android:id="@+id/tv_transactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transactions"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/ic_transactions_24dp"
            android:drawablePadding="8dp"
            android:padding="16dp"
            android:background="@drawable/nav_menu_selector"
            android:layout_marginTop="1dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

        <TextView
            android:id="@+id/tv_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/ic_settings_24dp"
            android:drawablePadding="8dp"
            android:padding="16dp"
            android:background="@drawable/nav_menu_selector"
            android:layout_marginTop="1dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>